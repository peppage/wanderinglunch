extends includes/base

block css
    link(rel='stylesheet', href='/stylesheets/truck.css')

block content
    include includes/menu

    - var t = truck[0]

    .pure-g-r.content
        .pure-u-1-2
            img(src='/images/trucks/' + t.twitname + '.jpg' alt=t.name + ' menu')
            if images.length > 0
                img(src='https://playfoursquare.s3.amazonaws.com/press/logo/poweredByFoursquare_gray.png', width='300')
                .popup-gallery
                    each image in images
                        a(href=image['prefix'] + 'width960' + image['suffix']) 
                            img(src=image['prefix'] + 'width100' + image['suffix'])
        .pure-u-1-2
            .right-side
                h1.truck-title=t.name
                .truck-type=t.type
                br
                h2 Details
                .pure-g-r
                    .pure-u-1
                        p!=t.about
                    .pure-u-1-2
                        strong Last Location
                    .pure-u-1-2=t.location
                    .pure-u-1-2
                        strong Last Updated
                    .pure-u-1-2=prettyTime(t.lastupdate)
                h2 Links
                .pure-g-r
                    .pure-u-1
                        a(href=t.weburl, target='_blank') Website
                    .pure-u-1
                        a(href='http://twitter.com/' + t.twitname, target='_blank') Twitter
                    .pure-u-1
                        a(href='http://foursquare.com/v/' + t.foursquare + '?ref=P1JDYDE13QQDC11VUSA4LV3VV25OTRPHV1WAV5WP3VCE0QUP', target='_blank') Foursquare
                h2 Recent Tweets
                each tweet in tweets
                    .pure-u-1.tweet-name='@'+t.twitname
                    .pure-u-1.tweet-contents!=tweet.contents
                    .pure-u-1
                        a.tweet-time(href='http://twitter.com/' + tweet.twitname + '/status/' + tweet.id, target='_blank')=prettyTime(tweet.time)

block scripts
    script(src='/javascripts/modernizr.custom.js')
    script(src='/javascripts/jquery.magnific-popup.js')
    script.
        $(document).ready(function() {
            $('.popup-gallery').magnificPopup({
                delegate: 'a',
                type: 'image',
                tLoading: 'Loading image #%curr%...',
                mainClass: 'mfp-img-mobile',
                gallery: {
                    enabled: true,
                    navigateByImgClick: true,
                    preload: [0,1] // Will preload 0 - before current, and 1 after the current image
                },
                image: {
                    tError: '<a href="%url%">The image #%curr%</a> could not be loaded.',
                    titleSrc: function(item) {
                        return '<small>Provided by Foursquare</small>';
                    }
                }
            });
        });