<% extend 'includes/base.ect' %>

<h1>Signup</h1>
<br>
<% if @message.length > 0 : %>
  <div><%- @message %></div>
<% end %>

<form action="/signup" method="post">
  <label>Email</label>
  <input type="text" name="email">
  <br>
  <label>Password</label>
  <input type="password" name="password">
  <br>
  <button type="submit">Login</button>
</form>

<br>
<br>
<hr>
<a href="/login">Login</a><br>
