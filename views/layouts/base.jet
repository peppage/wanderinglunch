<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/static/site.css?v={{ .Version}}" />
    <link rel="preconnect" href="https://irs0.4sqi.net">
  </head>
  <body>
    <header class="header">
        <div class="header__logo">
            <a href="/{{ .Site }}">
                <img srcset="/static/images/wl-sm.png 95w,
                            /static/images/wl.png 368w"
                    sizes="(max-width: 450px) 95px,
                            368px"
                    src="/static/images/wl.png" alt="Wandering Lunch Logo">
            </a>
        </div>
        <nav class="header__nav">
            <ul>
                <li>
                    <a href="/{{ .Site }}/alltrucks">All Trucks</a>
                </li>
                <li>
                    <a href="/{{ .Site }}/map">Map</a>
                </li>
            </ul>
        </nav>
        {{yield header() }}
    </header>
    {{yield body()}}
    <footer>
        <div>
            <a href="http://twitter.com/peppage">Twitter</a> | 
            <a href="/{{ .Site }}/feedback">Feedback</a>
        </div>
        <div>
            {{ .Version }}
        </div>
    </footer>
  </body>
</html>