include mixins/truckTable

extends includes/base

block css
    link(rel='stylesheet', href='/stylesheets/magnific-popup.css')
    link(rel='stylesheet', href='/stylesheets/tooltipster.css')
    meta(name='description', content='Track and find food trucks around New York City. Updated everyday from twitter')

block content
    include includes/menu
    .sub-nav Quick Jump: 
        a(href='#uptown') Above 34th 
        a(href='#midtown') 10th to 33rd 
        a(href='#downtown') Downtown 
        a(href='#brooklyn') Brooklyn 

    - if (upTrucks.length !== 0) {
        a#uptown(style='visibility: hidden')
        h1.centerText Above 34th
        +truckTable(upTrucks)
    - }

    - if (midTrucks.length !== 0) {
        a#midtown(style='visibility: hidden')
        h1.centerText 10th to 33rd
        +truckTable(midTrucks)
    - }

    - if (downTrucks.length !== 0) {
        a#downtown(style='visibility: hidden')
        h1.centerText Downtown
        +truckTable(downTrucks)
    - }

    - if (bkTrucks.length !== 0) {
        a#brooklyn(style='visibility: hidden')
        h1.centerText Brooklyn
        +truckTable(bkTrucks)
    - }

    - if (upTrucks.length == 0 && midTrucks.length == 0 && downTrucks.length == 0 && bkTrucks.length == 0) {
          h1 No Trucks at the moment
    - }

block scripts
    script(type='text/javascript'
         , src='/javascripts/jquery.tooltipster.js')
    script(type='text/javascript'
         , src='/javascripts/jquery.magnific-popup.js')

    script(type='text/javascript').
        $(document).ready(function() {
            $('.tooltip').tooltipster();
            $('.image-link').magnificPopup({type:'image'});
        });