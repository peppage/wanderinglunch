{{extends "layouts/base.jet"}}
{{block header()}}{{end}}

{{block body()}}
  <main>
    {{range zone, trucks := spots}}
        <div class="zone">
          <div class="zone__header">
            <h1>{{zone}}</h1>
          </div>
          <div class="zone__trucks">
            {{range spot := trucks}}
                {{include "partials/_spot.jet" spot}}
            {{end}}
          </div>
        </div>
    {{end}}
  </main>
{{end}}