include mixins/truckTable

extends includes/base

block css
    link(rel='stylesheet', href='/stylesheets/index.css')
    meta(name='description', content='Complete list of food trucks around New York City')

block content
    include includes/menu
    
    h1.centerText All Trucks
    +truckTable(trucks)

block scripts
    script.
        function appInit() {
            $(document).ready(function() {
                if( $('.tooltip').length > 0 ) {
                    $('.tooltip').tooltipster();
                    $('.image-link').magnificPopup({type:'image'});
                }
            });
        }