<div class="truck">
    <div class="truck__name">
        <a href="/truck/{{ .Twitname}}">
        {{ .Name}}
        </a>
    </div>
    <div>
        {{ .Lastupdate|relativeTime}}
    </div>
    <div class="truck__image">
        {{if len( .R.Images) > 0}}
        <img src="https://irs0.4sqi.net/img/general/width30{{ .R.Images[0].Suffix}}" alt="{{ .Name}} Menu">
        {{end}}
    </div>
</div>