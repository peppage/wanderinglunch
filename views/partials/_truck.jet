<div class="truck">
    <div class="truck__name">
        <a href="/truck/{{ .R.Truck.Twitname}}">
        {{ .R.Truck.Name}}
        </a>
    </div>
    <div class="truck__location">
        {{ .R.Location.Display}}
    </div>
    <div class="truck__image">
        {{if len( .R.Truck.R.Images) > 0}}
        <img src="https://irs0.4sqi.net/img/general/width30{{ .R.Truck.R.Images[0].Suffix}}" alt="{{ .R.Truck.Name}} Menu">
        {{end}}
    </div>
</div>