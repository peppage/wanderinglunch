@{
    import (
        "wanderinglunch/util"
        mdl "wanderinglunch/model"
	)

	var body string
	var title string
    var site string
}
@{
    sites, _ := mdl.GetSites()
}
<!DOCTYPE html>
<html>
<head>
    <link href="/favicon.ico" rel="shortcut icon">
	<title>Wandering Lunch: @title</title>
    <link rel="stylesheet" href="/static/site.css?v=@util.Md5File("/static/site.css")">
</head>
<body>
    <header>
        <div class="grid-1-center">
            <a href="/@site"><img src="/static/images/wl.png"></a>
        </div>
        <nav class="grid-1-center">
            <ul>
                <li>
                    <a href="/@site/alltrucks">All Trucks</a>
                </li>
                <li>
                    <a href="/@site/map">Map</a>
                </li>
                <li>
                    <a href="/admin">Admin</a>
                </li>
            </ul>
        </nav>
        <nav class="grid-1-center">
            <ul>
                <li>
                    <a href="/admin/truck/add">Add Truck</a>
                </li>
                <li>
                    <a href="/admin/sub/add">Add Sub</a>
                </li>
                <li>
                    <a href="/admin/ad/add">Add Ad</a>
                </li>
                <li>
                    <a href="/admin/location/add">Add Location</a>
                </li>
                <li>
                    <a href="/admin/site/add">Add Site</a>
                </li>
            </ul>
        </nav>
        <nav class="grid-1-center">
            <ul>
                <li>
                    <a href="/admin/trucks">Trucks</a>
                </li>
                <li>
                    <a href="/admin/subs">Subs</a>
                </li>
                <li>
                    <a href="/admin/ads">Ads</a>
                </li>
                <li>
                    <a href="/admin/locations">Locations</a>
                </li>
                <li>
                    <a href="/admin/sites">Sites</a>
                </li>
            </ul>
        </nav>
        <div class="grid-1-center">
            <div class="col-3">
                <select class="js-siteSwitch">
                    <option value="">Select</option>
                    @for _, v := range sites {
                        <option value="@v">@v</option>
                    }
                </select>
            </div>
        </div>
    </header>
    <main class="content">
        <div class="grid-1-center">
            <div class="col-9">
	            @body
            </div>
        </div>
    </main>
    <footer>
        <div class="grid-1-center">
            <div class="col-9">
                <div class="footer--left">
                    <a href="http://twitter.com/peppage">Twitter</a> | 
                    <a href="/@site/feedback">Feedback</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="/static/site.js?v=@util.Md5File("/static/site.js")"></script>
</body>
</html>
