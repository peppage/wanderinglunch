<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>
		{{ .title }}
	</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-3.1.0.js"></script>
	<link rel="stylesheet" media="screen" href="/static/site.css">
	<script src="/static/site.js"></script>
</head>
<body>
	<header class="nav">
		<div class="nav-wrapper">
			<div class="nav-left">
				<div class="logo"></div>
			</div>
			<div class="nav-right">
				<a {{if eq current "index" }} class="active" {{ end }} href="/">Home</a>
				<a class="noMobile {{if eq current "alltrucks" }}active{{ end }}" href="/alltrucks">All Trucks</a>
				<a {{if eq current "map" }} class="active" {{ end }} href="/map">Map</a>
				<a href="/feed">Live Feed</a>
				<a class="noMobile" href="http://twitter.com/peppage">Twitter</a>
				{{ if .admin }}
					<span class="dropItem">
						<a href="/admin" class="dropItem-header">Admin</a>
						<div class="dropItem-sub">
							<a href="/admin/locations">Locations</a><br>
							<a href="/admin/subs">Subs</a>
						</div>
					</span>
				{{ end }}
			</div>
      	</div>
	</header>
	<div class="section">
		<div class="content-wrapper">
			{{ yield }}
		</div>
	</div>
	<div class="section">
		<footer class="footer">
		</footer>
	</div>
	{{ if .admin }}
		<script src="/static/admin.js"></script>
	{{ end }}
</body>
</html>