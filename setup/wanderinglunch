server {
  listen 80;
  server_name www.wanderinglunch.com;
  return 301 http://wanderinglunch.com;
}

server {
  listen 80;
  server_name wanderinglunch.com;
  location / {
    proxy_pass http://wanderinglunch;
  }
}

server {
  listen 80;
  server_name api.wanderinglunch.com;
  location / {
    proxy_pass http://api;
  }
}

